<div id="home-screen">

      <!-- Form -->
      <div id="form-box">
        <h1 id="form-title" style="font-size: 30px; margin: 15px; text-align: center">Booking Form</h1>

        <form action="/booking" method="POST">
          <div style="display: flex; justify-content: space-around">

            <div id="firstNameD" style="width: 280px; height: 60px">
              <label for="firstName" style="font-size: 15px; font-weight: 700; margin-bottom: 0;">First Name</label>
              <input type="text" name="firstName" id="firstName" placeholder="First Name" style="width: 90%; text-transform: capitalize;" />
            </div>

            <div id="lastNameD" style="width: 280px; height: 60px">
              <label for="lastName" style="font-size: 15px; font-weight: 700">Last Name</label>              
              <input type="text" name="lastName" id="lastName" placeholder="Last Name" style="width: 90%; text-transform: capitalize;" />
            </div>

          </div>

          <div style="display: flex; justify-content: space-around">

            <div id="emailD" style="width: 280px; height: 60px">
              <label for="email" style="font-size: 15px; font-weight: 700">Email</label>              
              <input type="text" name="email" id="email" placeholder="email" style="width: 90%"  />
            </div>

            <div id="phoneD" style="width: 280px; height: 60px">
              <label for="phone" style="font-size: 15px; font-weight: 700">Phone</label>                            
              <input type="text" name="phone" id="phone" placeholder="Phone" style="width: 90%" />
            </div>

          </div>

          <div style="display: flex; justify-content: space-around">

            <div id="dateD" style="width: 280px; height: 60px;">
              <label for="selectedDate" style="font-size: 15px; font-weight: 700; display: block;">Date</label>
              <input type="date" name="selectedDate" id="selectedDate" placeholder="Date" style="width: 60%; display: inline;" />
              <button id="date-check" type="submit" formaction="/booking/datecheck" formmethod="GET">Check<i class="far fa-calendar-check" style="margin-left: 3px;"></i></button>
            </div>

            <div id="timeD" style="width: 280px; height: 60px">
              <label for="selectedTime" style="font-size: 15px; font-weight: 700">Time</label>
              <br />
              <select name="selectedTime" id="selectedTime" placeholder="Time" style="width: 50%; font-weight: 500"></select>
            </div>

          </div>

          <div id="availableApp">             
             <p style="margin: 10px 30px; font-size: 15px;">{{availableTime}}</p>
          </div>

          <div id="home-err-message">{{homeError}}</div>

          <div style="margin-top: 5px; display: flex; flex-direction: column; align-items: center;">
            <button id="homeBtn" class="formBtn" type="submit">
              <i class="fa fa-database"></i>Submit</button>
            
            <a id="modify-link" href="/booking/check" style="font-weight: 600; font-size: 13px; margin: 5px 0;"
              ><i class="fa fa-list-alt"></i> View or Cancel your booking</a>
          </div>

        </form>
      </div>      
    </div>

    

